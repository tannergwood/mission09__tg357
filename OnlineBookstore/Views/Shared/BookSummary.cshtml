@{
}

@model Book


<!--Here I changed the borders to green on the cards that hold the books-->
<div class="card card-title m-1 p-1 border border-success">
    <div class="bg-gradient p-1">
        <!--Here I bolded and centered the title of the book within the cards-->
        <h3 class="text-center fw-bolder">
            @Model.Title
        <span class="rounded-pill" style="float:right">
            <small>$@Model.Price</small>
        </span>
        </h3>
    </div>
<div class="card-text p-1">
    <ul>
        <li>By: @Model.Author</li>
        <li>Publisher: @Model.Publisher</li>
        <li>ISBN: @Model.Isbn</li>
        <li>Category: @Model.Category</li>
        <li>Classification: @Model.Classification</li>
        <li>Pages: @Model.PageCount</li>
        <li>Price: $@Model.Price</li>
    </ul>
    <form method="post" asp-page="/Purchase">
        <input type="hidden" asp-for="@Model.BookId"/>
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

        <span class="card-text">
            <!--Here I changed the border and the text color and made it so the button was green-->
            <button type="submit" class="btn btn-success border border-dark text-dark btn-sm float-end">Purchase</button>
        </span>
    </form>
</div>
</div>

