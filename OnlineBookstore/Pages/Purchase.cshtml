@page
@model OnlineBookstore.Pages.PurchaseModel
@{
}


<h2>Your Cart</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Book</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var booky in Model.basket.Items)
            {
        <tr>
            <td>@booky.Book.Title</td>
            <td>@booky.Quantity</td>
            <td>@(booky.Book.Price.ToString("c"))</td>
            <td>@((booky.Quantity * booky.Book.Price).ToString("c"))</td>
        </tr>
            }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.basket.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Browsing</a>
</div>