@page
@model OnlineBookstore.Pages.PurchaseModel
@{
}

<h2 class="m-2">Your Cart</h2>
<div class="row">
    <!--I changed up how many cols the table takes to get it to look better and not go all the way to the end of the website-->
    <div class="col-1"></div>
    <div class="col-10">
        <!-- Here I changed the border color for the table to make it match more-->
        <table class="table table-bordered table-striped border-success m-1">
            <thead>
                <tr>
                    <th>Book</th>
                    <th>Quantity</th>
                    <th>Cost</th>
                    <th>Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booky in Model.basket.Items)
                {
                    <tr>
                        <td class="text-center">@booky.Book.Title</td>
                        <td class="text-center">@booky.Quantity</td>
                        <td class="text-center">@(booky.Book.Price.ToString("c"))</td>
                        <td class="text-center">@((booky.Quantity * booky.Book.Price).ToString("c"))</td>
                        <td class="text-center">
                            <form method="post" asp-page-handler="Delete">
                                <input type="hidden" name="bookId" value="@booky.Book.BookId" />
                                <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>

            <tfoot>
                <tr>
                    <td colspan="3">Total:</td>
                    <td colspan="9" class="text-center">@Model.basket.CalculateTotal().ToString("c")</td>
                    
                </tr>
            </tfoot>
        </table>
    </div>
    <div class="col-1"></div>
</div>
<div class="m-1 text-center">
    <!--Here I changed the text color, boldness, border, and button color for this button-->
    <a class="btn btn-success border border-dark text-dark fw-bolder" href="@Model.ReturnUrl">Continue Browsing</a>
    <a class="btn btn-success border border-dark text-dark fw-bolder" asp-action="Checkout" asp-controller="Purchase">Purchase</a>
</div>