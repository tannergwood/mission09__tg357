@foreach (Book book in Model.Books)
{
    <div class="card card-title m-1 p-1">
        <div class="bg-gradient p-1">
            <h3>@book.Title
            <span class="rounded-pill" style="float:right">
                <small>$@book.Price</small>
            </span>
            </h3>
        </div>
        <div class="card-text p-1">
            <ul>
                <li>By: @book.Author</li>
                <li>Publisher: @book.Publisher</li>
                <li>ISBN: @book.Isbn</li>
                <li>Category: @book.Category</li>
                <li>Classification: @book.Classification</li>
                <li>Pages: @book.PageCount</li>
                <li>Price: $@book.Price</li>
            </ul>
        </div>
    </div>
    
   
}

<div page-books="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary"
     class="btn-group float-end m-1"></div>
